{
  "name": "toon-language-support",
  "displayName": "Toon Language Support(unofficial)",
  "description": "The language toon is likes optimized json.",
  "version": "0.0.8",
  "license": "MIT",
  "publisher": "hashibutogarasu",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:toon"
  ],
  "icon": "images/icon.png",
  "author": {
    "name": "hashibutogarasu",
    "email": "karasu@karasu256.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hashibutogarasu/toon-language-support.git"
  },
  "main": "./packages/lsp/client/out/extension.js",
  "workspaces": [
    "packages/*",
    "packages/lsp/*"
  ],
  "contributes": {
    "languages": [
      {
        "id": "toon",
        "extensions": [
          ".toon"
        ],
        "configuration": "./packages/lsp/client/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "toon",
        "scopeName": "source.toon",
        "path": "./packages/lsp/client/syntaxes/toon.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "pnpm run build:core && pnpm run build:lsp-server && pnpm run build:lsp-client",
    "build:core": "pnpm --filter @toon/core build",
    "build:lsp-server": "pnpm --filter @toon/lsp-server build",
    "build:lsp-client": "pnpm --filter @toon/lsp-client build",
    "build:all": "pnpm -r build",
    "clean": "pnpm -r clean",
    "clean:all": "pnpm -r clean && rimraf node_modules",
    "test": "pnpm --filter @toon/core test",
    "test:all": "pnpm -r test",
    "compile": "tsc -b",
    "watch": "pnpm -r --parallel watch",
    "watch:core": "pnpm --filter @toon/core watch",
    "watch:lsp-server": "pnpm --filter @toon/lsp-server watch",
    "watch:lsp-client": "pnpm --filter @toon/lsp-client watch",
    "vsix": "pnpm run build && vsce package --no-dependencies",
    "vsix:clean": "pnpm run clean && pnpm run build && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.6.0",
    "@types/jest": "^30.0.0",
    "@types/msgpack-lite": "^0.1.12",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "msgpack-lite": "^0.1.26",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.5",
    "typescript-eslint": "^8.47.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}