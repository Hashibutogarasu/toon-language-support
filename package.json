{
  "name": "toon-language-support",
  "displayName": "Toon Language Support(unofficial)",
  "description": "The language toon is likes optimized json.",
  "version": "0.0.2",
  "license": "MIT",
  "publisher": "hashibutogarasu",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:toon"
  ],
  "icon": "images/icon.png",
  "author": {
    "name": "hashibutogarasu",
    "email": "karasu@karasu256.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hashibutogarasu/toon-language-support.git"
  },
  "main": "./lsp/client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "toon",
        "extensions": [
          ".toon"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "toon",
        "scopeName": "source.toon",
        "path": "./syntaxes/toon.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "test": "jest",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "vsix": "vsce package"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.6.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript-eslint": "^8.47.0",
    "vsce": "^2.15.0",
    "msgpack-lite": "^0.1.26",
    "@types/msgpack-lite": "^0.1.7"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
