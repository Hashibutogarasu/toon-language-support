{
  "name": "toon-language-support",
  "displayName": "Toon Language Support",
  "description": "The language toon is likes optimized json.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./lsp/client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "toon",
        "extensions": [
          ".toon"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "toon",
        "scopeName": "source.toon",
        "path": "./syntaxes/toon.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "test": "jest",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5"
  },
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.6.0",
    "typescript-eslint": "^8.47.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
