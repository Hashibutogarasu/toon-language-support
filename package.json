{
  "name": "toon-language-support",
  "displayName": "Toon Language Support(unofficial)",
  "description": "The language toon is likes optimized json.",
  "version": "0.0.10",
  "license": "MIT",
  "publisher": "hashibutogarasu",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "icon": "images/icon.png",
  "author": {
    "name": "hashibutogarasu",
    "email": "karasu@karasu256.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hashibutogarasu/toon-language-support.git"
  },
  "main": "./out/client/src/extension.js",
  "workspaces": [
    "packages/*",
    "packages/lsp/*"
  ],
  "activationEvents": [
    "onLanguage:toon"
  ],
  "contributes": {
    "languages": [
      {
        "id": "toon",
        "extensions": [
          ".toon"
        ],
        "configuration": "./out/client/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "toon",
        "scopeName": "source.toon",
        "path": "./out/client/syntaxes/toon.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "toon.convertJsonToToon",
        "title": "Convert to Toon",
        "category": "Toon"
      },
      {
        "command": "toon.convertToonToJson",
        "title": "Convert to JSON",
        "category": "Toon"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "toon.convertJsonToToon",
          "when": "resourceExtname == .json",
          "group": "7_modification"
        },
        {
          "command": "toon.convertToonToJson",
          "when": "resourceExtname == .toon",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "toon.convertJsonToToon",
          "when": "resourceExtname == .json"
        },
        {
          "command": "toon.convertToonToJson",
          "when": "resourceExtname == .toon"
        }
      ]
    }
  },
  "scripts": {
    "compile": "pnpm run check-types && node esbuild.js",
    "compile:production": "pnpm run check-types && node esbuild.js --production",
    "check-types": "tsc -b",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc -b -w",
    "build": "pnpm run compile:production",
    "build:core": "pnpm --filter @toon/core build",
    "build:lsp-server": "pnpm --filter @toon/lsp-server build",
    "build:lsp-client": "pnpm --filter @toon/lsp-client build",
    "build:all": "pnpm -r build",
    "clean": "rimraf out && pnpm -r clean",
    "clean:all": "pnpm -r clean && rimraf node_modules out",
    "test": "pnpm --filter @toon/core test",
    "test:all": "pnpm -r test",
    "vsix": "pnpm run build && vsce package --no-dependencies",
    "vsix:publish": "pnpm run vsix && vsce publish --no-dependencies",
    "vsix:clean": "pnpm run clean && pnpm run build && vsce package --no-dependencies"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.6.0",
    "@types/jest": "^30.0.0",
    "@types/msgpack-lite": "^0.1.12",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "esbuild": "^0.27.0",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "msgpack-lite": "^0.1.26",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.5",
    "typescript-eslint": "^8.47.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
