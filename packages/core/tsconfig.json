{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./out",
    "rootDir": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out", "test"]
}
