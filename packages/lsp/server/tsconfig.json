{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../core" }
  ]
}
